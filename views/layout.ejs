    <body>
     
        <%- body %>
<script>
    <%if(flash.success && flash.success.length>0){%>
            
        new Noty({
          them:'relax',
          text:  '<%= flash.success %>',
          type:'success',
          Layout:'topRight',
          timeout:1500
       }).show()
     
     <%}%>

     <%if(flash.error && flash.error.length>0){%>
     
     new Noty({
       them:'relax',
       text:  '<%= flash.error %>',
       type:'error',
       Layout:'topRight',
       timeout:500
    }).show()
  
  <%}%>
</script>
    </body>
