

        <%- include('_header.ejs'); -%>

       
        

  <div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>List of Students:</h2>
        </div>
        <div class="col-md-6 d-flex justify-content-md-end align-items-center">
            <a href="/home/form" class="btn btn-success">Add New Student</a>
        </div>
    </div>

    <% if (students.length > 0) { %>
    <div class="mt-3 mb-3">
        <div class="table-responsive">
            <table class="table table-success table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Batch</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>College</th>
                        <th>DSA</th>
                        <th>WEB-DEV</th>
                        <th>REACT</th>
                        <th>Interview</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (student of students) { %>
                    <tr>
                        <td><%= student.batch %></td>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.college %></td>
                        <td><%= student.dsa %></td>
                        <td><%= student.webDev %></td>
                        <td><%= student.react %></td>
                        <td>
                            <% if (student.interviews.length > 0) { %>
                            <% for (let company of student.interviews) { %>
                            <%= company.company %>
                            <% } %>
                            <% } else { %>
                            NONE
                            <% } %>
                        </td>
                        <td>
                            <a href="/home/destroy/<%= student._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <% } else { %>
    <h1>No Student records found</h1>
    <% } %>
</div>